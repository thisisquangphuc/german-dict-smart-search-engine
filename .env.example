# Example environment variables for weisswein_searchengine
# Copy this file to .env and fill in your own values

# PONS API key for dictionary lookups
PONS_API_KEY=your_pons_api_key_here

# OpenAI API key for AI features (if used)
OPENAI_API_KEY=your_openai_api_key_here

# Option 1: Use local app/data directory (recommended for development)
# WEISSWEIN_DATA_DIR=./app/data

# Application Settings
QUIZ_DATA_PATH=./app/data

# Enable DB logging
DB_ECHO=true